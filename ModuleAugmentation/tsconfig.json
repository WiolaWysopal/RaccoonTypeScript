{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./node_modules/@types", "./"],
    "outDir": "./dist"
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "files": ["express-augment.d.ts"],
  "exclude": ["node_modules", "dist"]
}
